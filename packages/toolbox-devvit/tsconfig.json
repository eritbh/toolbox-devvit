{
	"extends": "@tsconfig/node-lts/tsconfig.json",
	"compilerOptions": {
		"rootDir": "./src",
		"outDir": "./dist",
		"composite": true,

		"noImplicitAny": false,
		"strictNullChecks": true,
		"strict": true,

		// devvit types do not like being observed in this context
		"skipLibCheck": true
	},
	"include": [
		"./src"
	],
	"references": [
		{ "path": "../toolbox-storage" }
	]
}
